<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">

            <form role="form" action="/admin/categories" method="post">
                <div class="card-body">

                    <div class="form-group">
                        <label for="name" class="col-sm-2 col-form-label">عنوان</label>
                        <input type="text" name="title" class="form-control col-sm-12" value="" data-role="tagsinput" placeholder="عنوان دسته بندی">
                        <%
                            if (title_error.length > 0){
                        %>
                            <div class="alert alert-danger alert-dismissible" style="margin-top: 5px;">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h5><i class="icon fa fa-close"></i> هشدار !</h5>
                                <%= title_error %>
                            </div>
                        <%
                            }
                        %>
                    </div>


                    <div class="form-group">
                        <button  type="submit" class="btn btn-primary col-md-6 offset-md-6 text-center" style="margin-top: 10px;">ذخیره دسته بندی</button>
                    </div>

                </div>

            </form>
        </div>
    </div>
</div>


<%- include('../includes/flashMessage') %>
