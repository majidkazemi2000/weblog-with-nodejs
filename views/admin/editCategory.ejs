<div class="row">
    <div class="col-md-12">

        <div style="margin-bottom: 18px;">
            <a href="/admin/categories" class="btn btn-danger offset-md-9 col-md-3 text-center">لغو <i class="fa fa-file-text" style="font-weight: lighter;margin-right: 10px;"></i></a>
            <a href="/admin" class="btn btn-warning col-md-3 offset-md-9 text-center" style="margin-top: 5px;">بازگشت به خانه <i class="fa fa-home" style="font-weight: lighter;margin-right: 10px;"></i></a>
        </div>
        <div class="card card-primary">

            <form role="form" action="/admin/categories/<%- category._id %>?_method=PUT" method="post">
                <div class="card-body">

                    <div class="form-group">
                        <label for="name" class="col-sm-2 col-form-label">عنوان</label>
                        <input type="text" name="title" class="form-control col-sm-12" value="<%= category.title %>" data-role="tagsinput" id="tags" placeholder="عنوان دسته بندی">
                        <%
                            if (title_error.length > 0){
                        %>
                            <div class="alert alert-danger alert-dismissible" style="margin-top: 5px;">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h5><i class="icon fa fa-close"></i> هشدار !</h5>
                                <%= title_error %>
                            </div>
                        <%
                            }
                        %>
                    </div>

                    <div class="form-group">
                        <button  type="submit" class="btn btn-primary col-md-6 offset-md-6 text-center" style="margin-top: 10px;">ویرایش دسته بندی</button>
                    </div>

                </div>

            </form>
        </div>
    </div>
</div>

<%- include('../includes/flashMessage') %>
